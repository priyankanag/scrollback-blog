<div id="at_header">
    <div class="row">
        <div class="medium-4 columns">
            <div class="at_logo_container">
                {{#if @blog.logo}}
                    <a href="{{@blog.url}}"><img class="at_logo_img" src="{{@blog.logo}}" alt="{{@blog.title}}" />
                    {{else}}
                        <a href="{{@blog.url}}">
                {{/if}}
                    <span class="at_logo_text">{{@blog.title}}</span></a>
            </div>
        </div>
        <div class="medium-4 columns text-right hide-for-small-only">
            <div class="at_icon_menu">
                <a class="at_icon_menu_item" href="https://github.com/scrollback/scrollback/" data-tooltip class="has-tip" title="Github"><span class="fa fa-github-square"></span></a>
                <a class="at_icon_menu_item" href="http://scrollback.github.io/" data-tooltip class="has-tip" title="Documentation"><span class="fa fa-book"></span></a>
                <a class="at_icon_menu_item" href="{{@blog.url}}/faq" data-tooltip class="has-tip" title="Frequently Asked Questions"><span class="fa fa-question-circle"></span></a>
            </div>
        </div>
        <div class="medium-4 columns">
            {{> widgets/at_search }}
        </div>
    </div>
</div>